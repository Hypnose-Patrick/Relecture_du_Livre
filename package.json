{
  "name": "relecture-livre-notion",
  "version": "1.0.0",
  "description": "Assistant de relecture IA intégré avec Notion et Claude AI pour la correction et l'optimisation de contenu",
  "type": "module",
  "main": "electron/main.js",
  "homepage": "https://github.com/Hypnose-Patrick/Relecture_du_Livre",
  "author": {
    "name": "Hypnose-Patrick",
    "url": "https://github.com/Hypnose-Patrick"
  },
  "license": "MIT",
  "keywords": [
    "notion",
    "claude-ai",
    "proofreading",
    "ai-assistant",
    "vue",
    "electron",
    "relecture",
    "correction",
    "ia"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --host --port 3000",
    "deploy:local": "npm run build && npm run serve",
    "deploy:staging": "npm run build && vercel --prod false",
    "deploy:production": "npm run build && vercel --prod",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build-win": "npm run build && electron-builder --win",
    "electron:build-mac": "npm run build && electron-builder --mac",
    "electron:build-linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src --ext .vue,.js,.ts --fix",
    "format": "prettier --write src/**/*.{vue,js,ts,css,scss,md}",
    "test": "vitest",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "@notionhq/client": "^2.2.0",
    "@anthropic-ai/sdk": "^0.24.0",
    "axios": "^1.6.0",
    "marked": "^12.0.0",
    "prismjs": "^1.29.0",
    "highlight.js": "^11.9.0",
    "lodash-es": "^4.17.21",
    "date-fns": "^3.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "typescript": "^5.3.0",
    "vue-tsc": "^1.8.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/lodash-es": "^4.17.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "vitest": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^23.0.0",
    "sass": "^1.69.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.hypnose-patrick.relecture-livre",
    "productName": "Assistant de Relecture IA",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".env.production",
        "to": ".env",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hypnose-Patrick/Relecture_du_Livre.git"
  },
  "bugs": {
    "url": "https://github.com/Hypnose-Patrick/Relecture_du_Livre/issues"
  }
}
